extends layout

block content
    h1 whatdoiwear.today
    if user
        p Welcome to whatdoiwear.today, #{user.username}!
        div
            a(href='./closet') Your Closet
        div
            form(action='/logout?_method=DELETE' method='POST')
                button(type='submit' class='btn btn-primary') Logout
    else
        p Welcome to whatdoiwear.today!
        div
            a(href='./login') Login
        div
            a(href='./register') Register
