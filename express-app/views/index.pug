extends layout

block content
    if user
        nav(class='navbar navbar-expand-xl navbar-dark bg-dark')
            a(class='navbar-brand' href='/') whatdoiwear.today
            ul(class='navbar-nav')
                li(class='nav-item')
                    a(class='nav-link' href='./closet') Your Closet
                li(class='nav-item')
                    a(class='nav-link' href='./add-attire') Add Attire
                form(class ='form-inline' action='/logout?_method=DELETE' method='POST')
                    button(type='submit' class='btn btn-light') Logout
        p Welcome, #{user.username}.
    else
        nav(class='navbar navbar-expand-xl navbar-dark bg-dark')
            a(class='navbar-brand' href='/') whatdoiwear.today
            ul(class='navbar-nav')
                li(class='nav-item')
                    a(class='nav-link' href='./login') Login
                li(class='nav-item')
                    a(class='nav-link' href='./register') Register
        div
            p #[a(href='./login') Login] if you have an account, or #[a(href='./register') register] today.
