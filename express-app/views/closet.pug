extends layout

block content
    nav(class='navbar navbar-expand-xl navbar-dark bg-dark')
        a(class='navbar-brand' href='/') whatdoiwear.today
        button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
            span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse" id="navbarSupportedContent")
            ul(class='navbar-nav')
                li(class='nav-item')
                    a(class='nav-link' href='./closet') Your Closet
                li(class='nav-item')
                    a(class='nav-link' href='./add-attire') Add Attire
                form(class='form-inline' action='/logout?_method=DELETE' method='POST')
                    button(type='submit' class='btn btn-light') Logout
    table(class='table')
        thead
            tr
                th(scope='col') Type
                th(scope='col') Name
                th(scope='col') Brand
                th(scope='col') Color
                th(scope='col') Size
        tbody
            each attire in results
                tr
                    td #{attire.type}
                    td #{attire.attire_name}
                    td #{attire.brand}
                    td #{attire.color}
                    td #{attire.size}